#!/usr/bin/env bash

# Bump version:
# * Increment version tag number
# * Update config.inc release string
# * Update config.inc release date

# Assumes:
# * Tag is of the form: v1.3-beta20

set -e
cd "$(dirname "$0")/.."

# Most recent tag
OLDTAG=`git describe --tags --abbrev=0`
OLDVER=$(echo "$OLDTAG" | sed -E 's/^v[0-9]+\.[0-9]+-[a-z]+//')
OLDPRE=$(echo "$OLDTAG" | sed -E 's/[0-9]+$//')
NEWVER=`expr $OLDVER + 1`
NEWTAG="$OLDPRE$NEWVER"
DATE=`date '+%B %d, %Y'`

echo "Bumping to $NEWTAG..."

perl -pni -e "s/define kDeskTopVersionSuffix .*/define kDeskTopVersionSuffix \"-beta$NEWVER\"/" config.inc

bin/setlang "en"

git commit -a -m "Bump verson to $NEWTAG"
git tag $NEWTAG
